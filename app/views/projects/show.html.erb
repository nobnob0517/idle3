  <div class="contents row" >
      <div class="content_post" style="background-image: url(<%= @project.image %>);">
    <% if user_signed_in? && current_user.id == @project.user_id %>
        <div class="more">
          <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '編集', "/projects/#{@project.id}/edit", method: :get %>
          </li>
          <li>
            <%= link_to '削除', "/projects/#{@project.id}", method: :delete %>
        </li>
      </ul>
    </div>
        <% end %>
    <p><%= @project.price %></p>
  </div>